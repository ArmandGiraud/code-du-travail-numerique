{
  "name": "code-du-travail",
  "version": "1.0.0",
  "private": true,
  "description": "Code du travail",
  "homepage": "https://github.com/douglasduteil/code-du-travail#readme",
  "dependencies": {
    "lerna": "^3.4.1"
  },
  "scripts": {
    "lint": "lerna run lint --parallel",
    "build": "lerna run build",
    "start": "lerna run start --parallel",
    "test": "lerna run test",
    "api": "yarn workspace code-du-travail-api dev",
    "frontend": "yarn workspace code-du-travail-frontend dev",
    "postinstall": "cp docker-compose.override.dev.yml docker-compose.override.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/douglasduteil/code-du-travail.git"
  },
  "bugs": {
    "url": "https://github.com/douglasduteil/code-du-travail/issues"
  },
  "workspaces": [
    "packages/*"
  ]
}
